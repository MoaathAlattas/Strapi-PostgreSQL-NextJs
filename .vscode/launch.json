    "version": "0.2.0",
    "configurations": [
        {
            "name": "server-api",
            "type": "node",
            "request": "attach",
            "port": 9000,
            "restart": true,
            "address": "localhost",
            "protocol": "auto",
            "localRoot": "${workspaceFolder}/server/api",
            "remoteRoot": "/app/server/api"
        },
        {
            "name": "client-app",
            "type": "node",
            "request": "attach",
            "port": 9100,
            "restart": true,
            "address": "localhost",
            "protocol": "auto",
            "localRoot": "${workspaceFolder}/client/web",
            "remoteRoot": "/app/client/web",
            "sourceMapPathOverrides": {
                "webpack:///./*": "${workspaceRoot}/client/web/*",
            }
        }
    ]
}